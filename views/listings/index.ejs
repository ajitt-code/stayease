<div class="card-body">
  <% for(let listing of allListings){%>
  <a href="/listings/<%= listing._id %>">
    <div class="card index-card">
      <img
        src="<%= listing.image%>"
        class="card-img-top"
        alt="listing_image"
        
      />
      <div class="card-img-overlay">abcd</div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%> <br /></b>
          &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
        </p>
      </div>
    </div>
  </a>

  <% } %>
</div>

