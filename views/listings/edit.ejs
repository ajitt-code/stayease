<% layout("/layouts/boilerplate") %>
<br />
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <br />
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label" class="needs-validation">Title</label>
        <input
          name="listing[title]"
          type="text"
          value="<%= listing.title %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good! </div>
        <br />
      </div>
      <div class = "mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required>
    <%= listing.description %></textarea>
        
        <div class="invalid-feedback">Please Enter Description</div>
        <br />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label" class="needs-validation">Image Link</label>
        <input
          name="listing[image][url]"
          type="text"
          value="<%= listing.image %>"
          class="form-control"
          required
        /><br />
      </div>
      <div class="row">
        <div class="mb-3 col-md-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            value="<%= listing.price %>"
            class="form-control"
            required
        </div>
        <div class="invalid-feedback">please enter valid price !</div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          type="text"
          value="<%= listing.country %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country should be valid !</div>
        <br />
      </div>

  </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          type="text"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid !</div>
        <br />
      </div>

      <button class="btn add-btn">Edit</button>
      <br />
    </form>
  </div>
</div>
